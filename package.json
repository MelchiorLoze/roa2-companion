{
  "version": "1.0.2",
  "name": "roa2-companion",
  "private": true,
  "author": {
    "name": "Melchior Loz√©",
    "email": "melchior.loze@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MelchiorLoze/roa2-companion"
  },
  "main": "./src/index.ts",
  "scripts": {
    "start": "expo start",
    "start:clear": "expo start --clear",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "reset": "expo prebuild --clean",
    "test": "jest --randomize",
    "test:dev": "jest --randomize --watchAll",
    "test:update-snapshots": "jest --updateSnapshot",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --randomize",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "expo lint",
    "lint:fix": "eslint --fix .",
    "type-check": "tsc --strict --noEmit"
  },
  "jest": {
    "preset": "jest-expo",
    "setupFiles": [
      "@shopify/react-native-skia/jestSetup.js",
      "react-native-unistyles/mocks",
      "<rootDir>/src/unistyles.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/jest.setup.ts",
      "<rootDir>/src/jest.mock.ts"
    ],
    "clearMocks": true
  },
  "dependencies": {
    "@expo/vector-icons": "^14.1.0",
    "@react-navigation/bottom-tabs": "^7.3.10",
    "@react-navigation/native": "^7.1.6",
    "@react-navigation/native-stack": "^7.3.10",
    "@shopify/react-native-skia": "v2.0.5",
    "@tanstack/react-query": "^5.81.2",
    "expo": "^53.0.12",
    "expo-font": "~13.3.1",
    "expo-image": "~2.3.0",
    "expo-linear-gradient": "~14.1.5",
    "expo-linking": "~7.1.5",
    "expo-router": "~5.1.0",
    "expo-secure-store": "~14.2.3",
    "expo-splash-screen": "^0.30.9",
    "expo-status-bar": "~2.2.3",
    "expo-system-ui": "~5.0.9",
    "fast-xml-parser": "^5.2.5",
    "luxon": "^3.6.1",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-native": "0.79.4",
    "react-native-edge-to-edge": "1.6.0",
    "react-native-gifted-charts": "^1.4.61",
    "react-native-nitro-modules": "^0.26.2",
    "react-native-reanimated": "~3.17.4",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.11.1",
    "react-native-svg": "15.11.2",
    "react-native-unistyles": "^3.0.0-rc.5"
  },
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@react-native-community/cli": "^17.0.0",
    "@tanstack/eslint-plugin-query": "^5.81.2",
    "@testing-library/react-native": "^13.2.0",
    "@types/fetch-mock": "^7.3.8",
    "@types/jest": "^29.5.14",
    "@types/luxon": "^3.6.2",
    "@types/react": "~19.0.10",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "eslint": "^9.30.0",
    "eslint-config-expo": "~9.2.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-native": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "expo-dev-client": "~5.2.1",
    "fetch-mock": "^12.5.3",
    "jest": "^29.7.0",
    "jest-expo": "~53.0.7",
    "jest-fail-on-console": "^3.3.1",
    "prettier": "^3.6.1",
    "react-test-renderer": "19.0.0",
    "typescript": "^5.8.3"
  }
}
