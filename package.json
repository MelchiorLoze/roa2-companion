{
  "version": "1.4.0",
  "name": "roa2-companion",
  "private": true,
  "author": {
    "name": "Melchior Loz√©",
    "email": "melchior.loze@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MelchiorLoze/roa2-companion"
  },
  "type": "module",
  "main": "./src/index.ts",
  "scripts": {
    "start": "expo start",
    "start:clear": "expo start --clear",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "reset": "expo prebuild --clean",
    "test": "jest --randomize",
    "test:dev": "jest --randomize --watchAll",
    "test:update-snapshots": "jest --updateSnapshot",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --randomize",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "expo lint",
    "lint:fix": "eslint --fix .",
    "type-check": "tsc --strict --noEmit"
  },
  "jest": {
    "preset": "jest-expo",
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@sentry/react-native|native-base|react-native-svg|@shopify/react-native-skia)/"
    ],
    "setupFiles": [
      "@shopify/react-native-skia/jestSetup.js",
      "react-native-unistyles/mocks",
      "<rootDir>/src/unistyles.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/jest.setup.ts",
      "<rootDir>/src/jest.mock.ts"
    ],
    "clearMocks": true
  },
  "dependencies": {
    "@expo/vector-icons": "^15.0.2",
    "@react-navigation/bottom-tabs": "^7.3.10",
    "@react-navigation/native": "^7.1.6",
    "@react-navigation/native-stack": "^7.3.10",
    "@shopify/react-native-skia": "2.2.12",
    "@tanstack/react-query": "^5.83.0",
    "expo": "^54.0.13",
    "expo-constants": "~18.0.9",
    "expo-font": "~14.0.9",
    "expo-image": "~3.0.9",
    "expo-linear-gradient": "~15.0.7",
    "expo-linking": "~8.0.8",
    "expo-router": "~6.0.11",
    "expo-secure-store": "~15.0.7",
    "expo-splash-screen": "~31.0.10",
    "expo-status-bar": "~3.0.8",
    "expo-system-ui": "~6.0.7",
    "fast-xml-parser": "^5.2.5",
    "luxon": "^3.7.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.4",
    "react-native-edge-to-edge": "1.6.0",
    "react-native-gifted-charts": "^1.4.62",
    "react-native-nitro-modules": "0.29.8",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-svg": "15.12.1",
    "react-native-unistyles": "^3.0.14",
    "react-native-worklets": "0.5.1",
    "type-fest": "^4.41.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.34.0",
    "@react-native-community/cli": "^17.0.0",
    "@tanstack/eslint-plugin-query": "^5.81.2",
    "@testing-library/react-native": "^13.2.0",
    "@types/fetch-mock": "^7.3.8",
    "@types/jest": "^29.5.14",
    "@types/luxon": "^3.6.2",
    "@types/react": "19.1.10",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "eslint": "^9.31.0",
    "eslint-config-expo": "~10.0.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-native": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "expo-dev-client": "~6.0.14",
    "fetch-mock": "^12.5.3",
    "jest": "^29.7.0",
    "jest-expo": "~54.0.12",
    "jest-fail-on-console": "^3.3.1",
    "prettier": "^3.6.2",
    "react-test-renderer": "19.1.0",
    "typescript": "~5.9.2"
  },
  "overrides": {
    "expo-dev-menu": "7.0.14"
  }
}
